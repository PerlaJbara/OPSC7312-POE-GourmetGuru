<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ggRed"
    tools:context=".HomeFragment">


    <FrameLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/headerphoto" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/cherry_swash_bold"
            android:text="Home"
            android:textColor="@android:color/white"
            android:textSize="80sp"
            android:textStyle="bold" />
    </FrameLayout>


    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#750A0B"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="8dp"
        android:text="Welcome, Perla!"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#750A0B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="8dp"
            android:rowCount="4"
            android:rowOrderPreserved="false">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btnLebaneseCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lebfood" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    android:fontFamily="@font/cherry_swash_bold"
                    android:gravity="center"
                    android:text="Lebanese Cuisine"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btnItalianCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/italiancuisine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    android:gravity="center"
                    android:text="Italian Cuisine"
                    android:fontFamily="@font/cherry_swash_bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <!-- Mexican Cuisine Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btnMexicanCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mexicanfood" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    android:gravity="center"
                    android:text="Mexican Cuisine"
                    android:fontFamily="@font/cherry_swash_bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <!-- Portuguese Cuisine Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btnPortCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/portuguesefood" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    android:gravity="center"
                    android:text="Portuguese Cuisine"
                    android:fontFamily="@font/cherry_swash_bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <!-- French Cuisine Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btnFrenchCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frenchfood" />

                <TextView
                    android:id="@+id/txtFrenchCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    android:fontFamily="@font/cherry_swash_bold"
                    android:gravity="center"
                    android:text="French Cuisine"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <!-- Japanese Cuisine Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btnJapaneseCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/japanesefood" />

                <TextView
                    android:id="@+id/txtJapaneseCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    android:fontFamily="@font/cherry_swash_bold"
                    android:gravity="center"
                    android:text="Japanese Cuisine"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <!-- South African Cuisine Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btnSACuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/safood" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    android:gravity="center"
                    android:text="South African Cuisine"
                    android:fontFamily="@font/cherry_swash_bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <!-- Indian Cuisine Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/btnIndianCuisine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/indiancuisine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000"
                    android:gravity="center"
                    android:text="Indian Cuisine"
                    android:fontFamily="@font/cherry_swash_bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </FrameLayout>

        </GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
